<h1>Listing circulars</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Subject</th>
      <th>Date issued</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circulars.each do |circular| %>
      <tr>
        <td><%= circular.number %></td>
        <td><%= circular.subject %></td>
        <td><%= circular.date_issued %></td>
        <td><%= link_to 'Show', circular %></td>
        <td><%= link_to 'Edit', edit_circular_path(circular) %></td>
        <td><%= link_to 'Destroy', circular, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Circular', new_circular_path %>
